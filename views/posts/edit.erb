<h1>Edit:</h1>
<form class="create" action="/posts/<%= @post.id %>" method="post">

	<input type="hidden" name="_method" value="patch">

	<label for="post[title]">Title</label>
	<input type="text" name="post[title]" placeholder="Title" value="<%= @post.title %>">
	<textarea name="post[body]" cols="30" rows="10" placeholder="Enter your story..."><%= @post.body %></textarea>
	<input class = "button" type="submit" value="Submit Post">
</form>